                              AutoLayout="False"
                              BorderThickness="0"
                              Background= "{DXBinding Expr='@a($dx:ThemedWindow).DataContext.ThemeIndex == 0 ? `#FF3F3F46` : `#FFF8F8F8`'}"
                              Padding="0"
                              dx:DXSerializer.SerializationID="stockChart"
                              CustomDrawCrosshair="{DXEvent 'CustomDrawCrosshair(@args)'}"
                              >

